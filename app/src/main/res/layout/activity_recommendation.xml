<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recommendation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.maptest.com.maptest.RecommendationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#60988a6e"
        tools:layout_editor_absoluteX="1dp"
        android:layout_height="wrap_content"
        android:id="@+id/tabLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:width="1dp"
            android:background="@drawable/home7"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="447dp"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:width="1dp"
            android:background="@drawable/visited"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="447dp"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/button3" />

        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:width="1dp"
            android:background="@drawable/map"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="447dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button"
            android:layout_toStartOf="@+id/button"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:width="1dp"
            android:background="@drawable/health"
            android:isScrollContainer="false"
            android:keepScreenOn="false"
            tools:layout_editor_absoluteY="447dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View android:id="@+id/rectangle_at_the_top1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#59dfdbd2"
            android:visibility="visible"
            android:layout_below="@+id/rectangle_at_the_top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp" />

        <View android:id="@+id/rec_trans2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#59dfdbd2"
            android:visibility="visible"
            android:layout_below="@+id/rectangle_at_the_top1"
            android:layout_marginTop="33dp" />

        <View android:id="@+id/rectangle_at_the_top"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#59dfdbd2"
            android:visibility="visible"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:inputType="textMultiLine"
            android:text="The general public should avoid outdoor exertion.Everyone should take care to wear a quality pollution mask. Ventilation is discouraged. Homes should be sealed and air purifiers turned on.  "
            android:lines="5"
            android:maxLines="5"
            android:textSize="12dp"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignBottom="@+id/rec_trans2"
            android:layout_toRightOf="@+id/imageView444"
            android:layout_toEndOf="@+id/imageView444"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:background="@android:color/transparent"
            android:editable="false" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:inputType="textMultiLine"
            android:text="Sensitive individuals should avoid outdoor activity as they may experience respiratory symptoms. "
            android:lines="4"
            android:maxLines="4"
            android:textSize="12dp"
            android:ems="10"
            android:id="@+id/unhealthText"
            android:layout_alignTop="@+id/rectangle_at_the_top1"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:background="@android:color/transparent"
            android:editable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommandition"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#1c2d4b"
            android:id="@+id/textView"
            android:layout_marginTop="34dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/badhealth"
            android:id="@+id/imageView444"
            android:layout_alignBottom="@+id/rec_trans2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/unhealthy"
            android:id="@+id/imageView44"
            android:layout_above="@+id/rec_trans2"
            android:layout_alignLeft="@+id/imageView444"
            android:layout_alignStart="@+id/imageView444" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/goodhealth22"
            android:id="@+id/imageView4"
            android:layout_above="@+id/rectangle_at_the_top1"
            android:layout_alignLeft="@+id/imageView44"
            android:layout_alignStart="@+id/imageView44"
            android:background="@android:color/transparent" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:inputType="textMultiLine"
            android:text="Enjoy your usaul outdoors activities, we recommand openning your windows and ventilating your home to bring in fresh,oxygen-rich air. "
            android:lines="4"
            android:maxLines="4"
            android:textSize="12dp"
            android:ems="10"
            android:id="@+id/goodText"
            android:layout_above="@+id/rectangle_at_the_top1"
            android:layout_alignLeft="@+id/unhealthText"
            android:layout_alignStart="@+id/unhealthText"
            android:background="@android:color/transparent"
            android:editable="false" />

    </RelativeLayout>


</RelativeLayout>
