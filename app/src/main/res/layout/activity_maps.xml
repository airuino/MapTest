<com.maptest.com.maptest.MapWrapperLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/map_relative_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background"
tools:context="com.maptest.com.maptest.MapsActivity" >


    <RelativeLayout
    android:layout_width="match_parent"
    android:background="#60988a6e"
    tools:layout_editor_absoluteX="1dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_height="wrap_content"
    android:id="@+id/tabLayout">

    <Button
        android:id="@+id/button3"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:width="1dp"
        android:background="@drawable/home7"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="447dp"
        android:onClick="HomeButton" />

    <Button
        android:id="@+id/button4"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:width="1dp"
        android:background="@drawable/visited"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="447dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:width="1dp"
        android:background="@drawable/map"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="447dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:width="1dp"
        android:background="@drawable/health"
        android:isScrollContainer="false"
        android:keepScreenOn="false"
        tools:layout_editor_absoluteY="447dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="10dp"
            android:imeOptions="actionSend"
            android:id="@+id/TFaddress"
            android:hint="Search city ... ex : Riyadh" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_below="@+id/TFaddress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="465dp" />

    </RelativeLayout>


</com.maptest.com.maptest.MapWrapperLayout>

